<style type="text/css">
    .indexp2 {
        width: 1366px;
        margin: 0px auto;
        padding: 30px 0px;
        background: #d8d8d8;
    }

        .indexp2 table {
            width: 1280px;
            margin: 0px auto;
        }

        .indexp2 td {
            text-align: left;
            vertical-align: top;
            line-height: 24px;
        }

            .indexp2 td p {
                margin: 10px 0px 0px 0px;
                padding: 0px 20px;
                line-height: 24px;
            }

            .indexp2 td ul {
                margin: 10px 10px 0px 35px;
                padding: 0px;
            }

            .indexp2 td li {
                list-style-type: disc;
                list-style-position: inside;
                margin: 0px;
                padding: 0px;
                line-height: 24px;
            }
